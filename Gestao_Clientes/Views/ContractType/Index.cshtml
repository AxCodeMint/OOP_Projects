@model IEnumerable<Gestao_Clientes.Models.ContractType>

@{
    ViewData["Title"] = "Index";
}

<section class="section-main">
    <article class="logo-article">
        <img src="~/images/logo_clientmanagement.png" alt="Client management module logo" />
    </article>

    <article class="welcome-article">
        <br />
        <br />
        <h1>Contract types</h1>
        <br />
        <br />
        <h2>Welcome to the Contract Type Management Data</h2>
        <p>
            This display allows you to efficiently manage and review the various types of contracts available with features to view, edit, delete, add records, and more.
        </p>
    </article>
</section>

<div class="info-div">
    <p>Keep accurate records of all contract types for contract management and enhance efficiency.</p>
</div>

<p id="navigationItens">
    <a asp-action="Create">Create a new row for a new record</a>
</p>
<table class="table" id="navigationItens">
    <thead>
        <tr>
            <th>Operations in each row</th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a id="navigationItens" asp-action="Edit" asp-route-id="@item.ContractTypeId">Edit</a>
                    <br />
                    <a id="navigationItens" asp-action="Details" asp-route-id="@item.ContractTypeId">Details</a>
                    <br />
                    <a id="navigationItens" asp-action="Delete" asp-route-id="@item.ContractTypeId">Delete</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>
